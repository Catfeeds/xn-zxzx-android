<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="common_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">@dimen/layout_left_right_interval</item>
        <item name="android:layout_marginRight">@dimen/layout_left_right_interval</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/selector_btn_round</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="main_tab_radio">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/tab_txtcolor</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="report_row_h">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="report_row_title">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_black_cd</item>
    </style>

    <style name="report_row_info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_black_cd</item>
        <item name="android:hint">暂无</item>
    </style>

    <style name="report_row_contact">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_black_cd</item>
    </style>


</resources>
