<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/lin_contact_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_gray"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:text="紧急联系人信息" />

        <View
            style="@style/style_split_line"
            android:layout_marginLeft="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="亲属关系"
                android:textColor="@color/text_black_cd" />

            <TextView
                android:id="@+id/tv_family"
                style="@style/report_row_info"
                tools:text="姓名" />


        </LinearLayout>

        <View
            style="@style/style_split_line"
            android:layout_marginLeft="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textColor="@color/text_black_cd" />

            <TextView
                android:id="@+id/tv_family_name"
                style="@style/report_row_info"
                tools:text="姓名" />


        </LinearLayout>

        <View
            style="@style/style_split_line"
            android:layout_marginLeft="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="联系方式"
                android:textColor="@color/text_black_cd" />

            <TextView
                android:id="@+id/tv_family_phone"
                style="@style/report_row_info"
                tools:text="姓名" />


        </LinearLayout>

        <View
            style="@style/style_split_line"
            android:layout_marginLeft="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="社会关系"
                android:textColor="@color/text_black_cd" />

            <TextView
                android:id="@+id/tv_society"
                style="@style/report_row_info"
                tools:text="姓名" />


        </LinearLayout>

        <View
            style="@style/style_split_line"
            android:layout_marginLeft="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textColor="@color/text_black_cd" />

            <TextView
                android:id="@+id/tv_society_name"
                style="@style/report_row_info"
                tools:text="姓名" />


        </LinearLayout>

        <View
            style="@style/style_split_line"
            android:layout_marginLeft="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="联系方式"
                android:textColor="@color/text_black_cd" />

            <TextView
                android:id="@+id/tv_society_phone"
                style="@style/report_row_info"
                tools:text="联系方式" />


        </LinearLayout>


    </LinearLayout>
</layout>
